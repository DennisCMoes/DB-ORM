<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.zenith.app.controllers.HomeController">
   <center>
      <VBox alignment="CENTER" minHeight="300.0" minWidth="200.0" prefHeight="334.0" prefWidth="260.0" spacing="20.0" BorderPane.alignment="CENTER">
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
         <children>
            <Text fx:id="remainingTasksLbl" strokeType="OUTSIDE" strokeWidth="0.0" text="Remaining Tasks (XX)" />
            <ListView fx:id="todoListView" prefHeight="200.0" prefWidth="200.0" />
            <Button fx:id="addTodoBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Add" />
         </children>
      </VBox>
   </center>
</BorderPane>
